@model shopapp.entity.Product

@{
    Layout="_layout";
}

<h1 class="h3">Edit Product</h1>
<hr>
<div class="row">
    <div class="col-md-8">
                    <form asp-controller="Admin" asp-action="CreateProduct" method="POST">
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Name" name="name" value="@Model.name">
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Url</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Url" name="imageUrl" value="@Model.imageUrl">
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Description" name="description" value="@Model.description">
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Price</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Price" name="price" value="@Model.price">
                </div>
            </div>
            <div class="form-group row">
                
                <div class="col-sm-10 offset-sm-2">
                    <button class="btn btn-primary" type="submit">Edit Product</button>
                </div>
            </div>
       
    </div>
    <div class="col-md-4">
            @foreach (var item in ViewBag.Categories)
            {
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input @(Model.productCategories.Any(i=>i.categoryId==item.id)?"checked":"")" 
                    id="category_@(item.id)" name="categoryId" value="@item.id">
                    <label for="category_@(item.id)" class="custom-control-label">@item.name</label>
                </div>
            }
    </div>
</div>
 </form>