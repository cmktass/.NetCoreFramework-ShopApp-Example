@model List<shopapp.entity.Product>
    
@{
  Layout="_layout";
}

    <div class="row">
        <div class="col-md-12">
            <h1>Admin Products</h1>
            <hr>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Image</td>
                        <td>Name</td>
                        <td>Price</td>
                        <td>Id</td>
                    </tr>
                </thead>
                <tbody>
                
                    @if(Model.Count>0){
                            @foreach (var item in Model)
                             {
                                <tr>
                                    <td>@item.id</td>
                                    <td><img src="@item.imageUrl"  width="80"></td>
                                    <td>@item.name</td>
                                    <td>@item.price</td>
                                    <td>
                                        <a href="/admin/edit/@item.id" class="btn btn-primary btn-sm">Edit</a>
                                        <a href="/admin/delete/@item.id" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                             }
                    }
                    else{
                            <div class="alert alert-danger">Ürün Yoktur.</div>
                    }



                    
                </tbody>
            </table>
        </div>
    </div>