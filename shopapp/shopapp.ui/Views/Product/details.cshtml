@model shopapp.entity.Product

@{
    Layout="_layout";
}
@section Categories{
  @await Component.InvokeAsync("Categories")
}
<div class="card mb-3">
  <div class="row no-gutters">
    <div class="col-md-3">
        <img src="@Model.imageUrl" alt="" class="card-img">
    </div>
    <div class="col-md-9">
      <div class="card-body">
          <h5 class="card-title">@Model.name</h5>
          <p class="card-text">@Model.description</p>
          <p class="card-text">
              <div class="btn btn-danger">@Model.price</div>
          </p>
      </div>
    </div>
  </div>
</div>